{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@vibebase/core": ["packages/core/src"],
      "@vibebase/dashboard": ["packages/dashboard/src"],
      "@vibebase/sdk": ["packages/sdk/src"],
      "@vibebase/cli": ["packages/cli/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".wrangler"]
}